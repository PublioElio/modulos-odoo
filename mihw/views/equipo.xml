    <!-- Top menu item -->

    <menuitem name="MIHW" id="mihw.menu_root" />

    <!-- menu categories -->

    <menuitem name="Menu" id="mihw.menu_1" parent="mihw.menu_root" />

    <!-- actions -->

    <menuitem name="Equipos" id="mihw.menu_1_equipo" parent="mihw.menu_1"
